<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

        <TextView
            android:id="@+id/timeSpan_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="00:00"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/timeSpan_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/timeSpan_value"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_toEndOf="@+id/timeSpan_value"
            android:text="TimeSpan Name"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/sunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/timeSpan_value"
            android:text="S"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/monday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/sunday"
            android:layout_below="@+id/timeSpan_value"
            android:layout_marginStart="4dp"
            android:text="M"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/tuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/monday"
            android:layout_below="@+id/timeSpan_value"
            android:layout_marginStart="4dp"
            android:text="T"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/wednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tuesday"
            android:layout_below="@+id/timeSpan_value"
            android:layout_marginStart="4dp"
            android:text="W"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/thursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/wednesday"
            android:layout_below="@+id/timeSpan_value"
            android:layout_marginStart="4dp"
            android:text="T"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/friday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/thursday"
            android:layout_below="@+id/timeSpan_value"
            android:layout_marginStart="4dp"
            android:text="F"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/saturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/friday"
            android:layout_below="@+id/timeSpan_value"
            android:layout_marginStart="4dp"
            android:text="S"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/saturday"
            android:src="@drawable/delete"
            android:background="#ffffff"/>



</RelativeLayout>